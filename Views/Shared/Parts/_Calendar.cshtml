<div class="filter">
    <select ng-options="a.Id as a.Name for a in vm.classes" ng-model="vm.filter.class">
        <option value="">Vyber třídu</option>
    </select>
    
    <select ng-options="a.Id as a.Name for a in vm.getPeopleForClass(vm.filter.class)" ng-model="vm.filter.person">
        <option value="">Vyber dítě</option>
    </select>
</div>

<div class="calendar">
    <div class="day" ng-repeat="day in vm.days">
        {{day.date.calendar()}}
        <br/>
        <div class="people">
            <div ng-repeat="p in day.persons track by $index" ng-bind="p.Name" ng-class="{'registered': vm.isPersonRegistered(p, day)}"></div>
        </div>
    </div>
</div>